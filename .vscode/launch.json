{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "wsgi.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--debug"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: DevFlask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_APP": "wsgi.py",
                "FLASK_DEBUG": "1",
                "TESTING": "1"
            },
            "args": [
                "run",
                "--debug"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": true,
            "args": [
                "-v"
            ]
        },
        {
            "name": "pytest suppress warnings",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": true,
            "args": [
                "-v",
                "--disable-warnings"
            ]
        },
        {
            "name": "pytest unit",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": true,
            "args": [
                "-v",
                "-m unit"
            ]
        },
        {
            "name": "pytest fixtures",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": true,
            "args": [
                "-v",
                "-m fixture"
            ]
        },
        {
            "name": "pytest verify basics",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": true,
            "args": [
                "-v",
                "-k test_basics"
            ]
        },
        {
            "name": "pytest users",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": true,
            "args": [
                "-v",
                "-m users"
            ]
        },
        {
            "name": "pytest user model",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": true,
            "args": [
                "-v",
                "--disable-warnings",
                "tests/unit/test_user_model.py"
            ]
        },
        {
            "name": "pytest auth",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": true,
            "args": [
                "-v",
                "-m auth"
            ]
        },
        {
            "name": "pytest focus",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": true,
            "args": [
                "-v",
                "-m focus"
            ]
        },
        {
            "name": "Docker: Python - Flask",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "flask"
            }
        }
    ]
}